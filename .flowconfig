[include]
.*/src/.*
.*/node_modules/.*

[ignore]
.*/implements/.*
.*/public/.*
.*/styleguide/.*

# Ignore some libs
.*/node_modules/stylelint/.*
.*/node_modules/findup/.*

[options]
module.system.node.resolve_dirname=node_modules
module.file_ext=.js
module.file_ext=.jsx
module.file_ext=.json
module.file_ext=.css
module.file_ext=.pcss
module.name_mapper='^components$' -> '<PROJECT_ROOT>/src/components/'
